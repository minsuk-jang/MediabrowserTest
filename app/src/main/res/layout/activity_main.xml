<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/button_play_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play1"

            app:layout_constraintEnd_toStartOf="@+id/button_pause_1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_connect_1"
            app:layout_constraintTop_toTopOf="@+id/button_connect_1" />

        <Button
            android:id="@+id/button_connect_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="248dp"
            android:text="connect1"
            app:layout_constraintEnd_toStartOf="@+id/button_play_1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_pause_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="248dp"
            android:text="pause1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_play_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_play_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_pause_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_connect_2"
            app:layout_constraintTop_toTopOf="@+id/button_connect_2" />

        <Button
            android:id="@+id/button_connect_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="connect2"
            app:layout_constraintEnd_toStartOf="@+id/button_play_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_connect_1" />

        <Button
            android:id="@+id/button_pause_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pause2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_play_2"
            app:layout_constraintTop_toTopOf="@+id/button_play_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>